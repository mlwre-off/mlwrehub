loader1.Visible = false

task.wait(0.3)
local text2 = createTextLabel(infoContainer, "Loading Key System", UDim2.new(0, 50 * adaptiveSize.scale, 0, 40 * adaptiveSize.scale), UDim2.new(0, 200 * adaptiveSize.scale, 0, 26 * adaptiveSize.scale), 20)
local loader2 = createRadialLoader(infoContainer, text2, -30, 3)
task.wait(0.8)
